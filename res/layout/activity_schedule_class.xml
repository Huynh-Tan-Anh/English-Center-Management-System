<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiêu đề xếp lịch học -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xếp Lịch Học"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <!-- Spinner chọn lớp -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn lớp"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerClasses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <!-- Spinner chọn ngày -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn ngày"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <!-- Chọn giờ bắt đầu -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn giờ bắt đầu"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TimePicker
        android:id="@+id/timePickerStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:layout_marginBottom="16dp"/>

    <!-- Chọn giờ kết thúc -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn giờ kết thúc"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TimePicker
        android:id="@+id/timePickerEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:layout_marginBottom="16dp"/>

    <!-- Nút xếp lịch học -->
    <Button
        android:id="@+id/btnScheduleClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xếp Lịch"
        android:layout_marginTop="16dp"/>

    <!-- Nút xem lịch học -->
    <Button
        android:id="@+id/btnViewSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem Lịch"
        android:layout_marginTop="16dp"/>

    <!-- Nút đóng -->
    <Button
        android:id="@+id/btnCloseSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đóng"
        android:layout_marginTop="16dp"/>
</LinearLayout>
