<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    android:orientation="vertical"
    android:backgroundTint="#47FAFAFA">

    <TextView
        android:id="@+id/txtLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:backgroundTint="@null"
        android:gravity="center"
        android:text="ENGLISH CENTER MANAGE SYSTEM"
        android:textColor="#F44336"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtLabel">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:stretchColumns="1">

            <TableRow>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="199dp"
                    android:layout_weight="1"
                    android:backgroundTint="#AFEEEE"
                    android:contentDescription="Quản lý Lớp học"
                    android:scaleType="centerInside"
                    android:src="@drawable/classin4" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#E6E6FA"
                    android:contentDescription="Quản lý sinh viên"
                    android:scaleType="centerInside"
                    android:src="@drawable/studentin4" />
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btnOpenClass"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:shadowColor="#2A2727"
                    android:shadowDx="20"
                    android:shadowDy="20"
                    android:shadowRadius="20 "
                    android:background="@drawable/button_ds"
                    android:backgroundTint="#000080"
                    android:text="Quản lý \nLớp học"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <Button
                    android:id="@+id/btnOpenStudent"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:shadowColor="#2A2727"
                    android:shadowDx="20"
                    android:shadowDy="20"
                    android:shadowRadius="20 "
                    android:background="@drawable/button_ds"
                    android:backgroundTint="#336600"
                    android:text="Quản lý \nsinh viên"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </TableRow>


            <TableRow>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="181dp"
                    android:layout_weight="1"
                    android:backgroundTint="#98FF98"
                    android:contentDescription="Xếp lịch học"
                    android:scaleType="centerInside"
                    android:src="@drawable/time_table" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#FAFAD2"
                    android:contentDescription="Nhập điểm"
                    android:scaleType="centerInside"
                    android:src="@drawable/score" />
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btnScheduleClass"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:shadowColor="#2A2727"
                    android:shadowDx="20"
                    android:shadowDy="20"
                    android:shadowRadius="20 "
                    android:background="@drawable/button_ds"
                    android:backgroundTint="#000080"
                    android:text="Xếp lịch học"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <Button
                    android:id="@+id/btnEnterScore"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:shadowColor="#2A2727"
                    android:shadowDx="20"
                    android:shadowDy="20"
                    android:shadowRadius="20 "
                    android:backgroundTint="#336600"
                    android:background="@drawable/button_ds"
                    android:text="Nhập điểm"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </TableRow>

            <TableRow>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#98FF98"
                    android:contentDescription="Xếp lịch học"
                    android:scaleType="centerInside"
                    android:src="@drawable/file_manage" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#FAFAD2"
                    android:contentDescription="Nhập điểm"
                    android:scaleType="centerInside"
                    android:src="@drawable/support_std" />
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btnDocument"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:shadowColor="#2A2727"
                    android:shadowDx="20"
                    android:shadowDy="20"
                    android:shadowRadius="20 "
                    android:background="@drawable/button_ds"
                    android:backgroundTint="#000080"
                    android:text="Quản lý \ntài liệu"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <Button
                    android:id="@+id/btnSupportStudent"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:shadowColor="#2A2727"
                    android:shadowDx="20"
                    android:shadowDy="20"
                    android:shadowRadius="20 "
                    android:backgroundTint="#336600"
                    android:background="@drawable/button_ds"
                    android:text="Hỗ trợ \nhọc viên"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </TableRow>
        </TableLayout>

    </RelativeLayout>


    <Button
        android:id="@+id/btnExitApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:backgroundTint="#D91010"
        android:text="Thoát" />


</RelativeLayout>