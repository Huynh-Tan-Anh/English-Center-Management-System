<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiêu đề quản lý tài liệu -->
    <TextView
        android:id="@+id/txtDcmtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý tài liệu"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <!-- ListView hiển thị danh sách tài liệu -->
    <ListView
        android:id="@+id/listViewDocuments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"/>

    <!-- Nút thêm tài liệu mới -->
    <Button
        android:id="@+id/btnAddDocument"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm tài liệu mới"
        android:layout_marginTop="16dp"/>
</LinearLayout>
