<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingTop="40dip"
    android:paddingRight="10dip"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/STUDENT_MANAGE_SYSTEM"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ENGLISH CENTER MANAGE SYSTEM"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textSize="24sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/vvelcome" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/admin1" />

    <RelativeLayout
        android:id="@+id/rledtlogin"
        android:layout_width="match_parent"
        android:layout_height="153dp"

        android:orientation="vertical">

        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tài khoản: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/user"
            android:layout_below="@+id/txtUsername"/>

        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUsername"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/imageView3"
            android:ems="10"
            android:hint="Nhập tài khoản"
            android:textColorHint="#ffffff"
            android:background="@drawable/button_ds"
            android:backgroundTint="#9999CC"
            android:minHeight="50dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txtPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtUsername"
            android:text="Mật khẩu: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/txtPassword"
            app:srcCompat="@drawable/password" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPassword"
            android:layout_toRightOf="@id/imageView6"
            android:ems="10"
            android:hint="Nhập mật khẩu"
            android:textColorHint="#ffffff"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:minHeight="50dp"
            android:textColor="#000000"
            android:background="@drawable/button_ds"
            android:backgroundTint="#9999CC"/>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlbtnlogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:backgroundTint="#3399FF"
            android:shadowColor="#2A2727"
            android:shadowDx="20"
            android:shadowDy="20"
            android:shadowRadius="20 "
            android:text="Đăng nhập"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <Button
            android:id="@+id/btnCloseLogin"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_toRightOf="@id/btnLogin"
            android:backgroundTint="#FFA5"
            android:shadowColor="#2A2727"
            android:shadowDx="20"
            android:shadowDy="20"
            android:shadowRadius="20 "
            android:text="Thoát"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="serif" />

    </RelativeLayout>


</LinearLayout>